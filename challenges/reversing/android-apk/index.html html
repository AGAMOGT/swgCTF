// Decompiled MainActivity.java
public class MainActivity extends AppCompatActivity {
    private String encryptFlag(String input) {
        StringBuilder result = new StringBuilder();
        for (int i = 0; i < input.length(); i++) {
            result.append((char) (input.charAt(i) + 1));
        }
        return result.toString();
    }
    
    private String getFlag() {
        String flag = "VTR\177rsfdujpo!bqL!boempeE";
        return decryptFlag(flag);
    }
    
    private String decryptFlag(String encrypted) {
        StringBuilder result = new StringBuilder();
        for (int i = 0; i < encrypted.length(); i++) {
            result.append((char) (encrypted.charAt(i) - 1));
        }
        return result.toString();
    }
}
